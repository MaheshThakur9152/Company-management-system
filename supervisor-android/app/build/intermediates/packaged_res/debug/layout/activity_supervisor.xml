<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attendance"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:id="@+id/btnSync"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_sync_button"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginEnd="12dp">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@android:drawable/stat_notify_sync"
                        app:tint="@color/white" />
                    
                    <TextView
                        android:id="@+id/tvSyncStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 Pending"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/btnLogout"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_lock_power_off"
                    app:tint="#CCFFFFFF" />
            </LinearLayout>
        </RelativeLayout>

        <!-- Geofence Card -->
        <LinearLayout
            android:id="@+id/geoCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_geo_card"
            android:padding="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@android:drawable/ic_dialog_map"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/tvSiteName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Site Name"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginStart="8dp" />

            <TextView
                android:id="@+id/tvGeoStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Locating..."
                android:textSize="10sp"
                android:textStyle="bold"
                android:background="@drawable/bg_badge_white"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@android:drawable/ic_menu_my_calendar"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025-12-01"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginStart="8dp" />

            <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1" />

            <TextView
                android:id="@+id/tvWorkerCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 Workers"
                android:textColor="#CCFFFFFF"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Search Bar -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="-20dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@android:drawable/ic_menu_search"
                app:tint="#999999" />

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="Search worker..."
                android:layout_marginStart="8dp"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Employee List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvEmployees"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="60dp"
        android:paddingHorizontal="16dp"
        android:clipToPadding="false" />

    <!-- Footer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#E6FFFFFF"
        android:padding="16dp">

        <Button
            android:id="@+id/btnFooterSync"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ALL SYNCED"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:backgroundTint="#333333"
            android:padding="12dp" />
    </LinearLayout>

</RelativeLayout>