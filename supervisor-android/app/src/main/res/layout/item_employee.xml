<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="1dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="#eeeeee"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Employee Name"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/tvRole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Code â€¢ Role"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <LinearLayout
                    android:id="@+id/layoutCheckTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@android:drawable/checkbox_on_background"
                        app:tint="@color/green" />

                    <TextView
                        android:id="@+id/tvCheckTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="09:00 AM"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/green"
                        android:layout_marginStart="4dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutLocked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="#f5f5f5"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    android:layout_marginTop="4dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@android:drawable/ic_lock_lock"
                        app:tint="#666666" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Synced"
                        android:textSize="10sp"
                        android:textColor="#666666"
                        android:layout_marginStart="4dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutControls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/btnMarkPresent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mark Present"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:backgroundTint="@color/colorPrimary"
                android:drawableStart="@android:drawable/ic_menu_camera"
                android:drawableTint="@color/white"
                android:padding="10dp" />

            <Button
                android:id="@+id/btnUndo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Undo / Absent"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:backgroundTint="#ffebee"
                android:drawableStart="@android:drawable/ic_delete"
                android:drawableTint="@color/red"
                android:padding="10dp"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvLockedMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Attendance Locked"
            android:gravity="center"
            android:padding="8dp"
            android:background="#f9f9f9"
            android:textColor="#999999"
            android:textSize="12sp"
            android:layout_marginTop="12dp"
            android:visibility="gone" />

    </LinearLayout>
</androidx.cardview.widget.CardView>